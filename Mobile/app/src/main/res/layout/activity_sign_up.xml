<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.arvinsichuan.twentyseventeen.oldcarsalesys.mobile.account.signup.SignUpActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_username" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:hint="Username"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText_reg_password" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_reg_username" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:hint="Password" android:inputType="textPassword"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText_reg_password_again" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_reg_password" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:hint="Password Again" android:inputType="textPassword"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_reg_sigin_up" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_reg_password_again" android:layout_marginLeft="90dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_reg_cancel" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_reg_password_again" android:layout_marginRight="90dp"
            app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
