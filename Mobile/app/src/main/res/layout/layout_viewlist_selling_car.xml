<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="92dp"
            android:layout_height="97dp" app:srcCompat="@mipmap/ic_car_backup"
            android:id="@+id/imageView_car_backup" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:cropToPadding="true" android:adjustViewBounds="true"/>
    <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/textView_car_detail_title"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintLeft_toRightOf="@+id/imageView_car_backup"
            android:layout_marginLeft="24dp"/>
    <TextView
            android:layout_width="140dp"
            android:layout_height="18dp"
            android:ems="10"
            android:id="@+id/textView_car_price"
            app:layout_constraintLeft_toRightOf="@+id/imageView_car_backup" android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView_car_detail_title"
            tools:layout_editor_absoluteY="30dp"/>
    <TextView
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/textView_car_trip"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView_car_price"
            app:layout_constraintLeft_toRightOf="@+id/imageView_car_backup" android:layout_marginLeft="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView_car_year"
            app:layout_constraintLeft_toRightOf="@+id/imageView_car_backup" android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView_car_trip"/>

</android.support.constraint.ConstraintLayout>