<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.arvinsichuan.twentyseventeen.oldcarsalesys.mobile">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".account.signin.activities.LoginActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".account.signup.SignUpActivity"
                android:label="@string/title_activity_sign_up"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".general.activities.MainContentActivity"
                android:label="@string/title_activity_main_content"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>